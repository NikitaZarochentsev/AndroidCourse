<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:textSize">16sp</item>
        <item name="titleTextColor">@color/colorTextDefault</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_24px</item>
    </style>

    <style name="CardTextStyle">
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeadingStyle">
        <item name="android:textColor">@color/colorTextCustom</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DataTextStyle">
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>