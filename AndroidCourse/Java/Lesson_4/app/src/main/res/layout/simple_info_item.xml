<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewSimple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="12dp"
    android:elevation="8dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutCardViewSimple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/imageSimple"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_security" />

        <TextView
            android:id="@+id/headerTextViewSimple"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_toRightOf="@+id/imageSimple"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:text="Header"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/infoTextViewSimple"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/headerTextViewSimple"
            android:layout_alignLeft="@id/headerTextViewSimple"
            android:gravity="center_vertical"
            android:text="text" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
