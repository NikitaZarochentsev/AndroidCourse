<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewBase"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/relativeLayoutCardViewBase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/imageBase"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/ic_security" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageBase"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/headerTextViewBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Header"
                android:textColor="@color/black"
                android:textSize="19dp"/>

            <TextView
                android:id="@+id/infoTextViewBase"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@id/headerTextViewBase"
                android:layout_alignStart="@id/headerTextViewBase"
                android:text="text" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
