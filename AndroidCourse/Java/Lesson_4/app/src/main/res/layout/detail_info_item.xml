<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    android:elevation="3dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutCardViewDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/imageDetail"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_security" />

        <TextView
            android:id="@+id/headerTextViewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageDetail"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:text="Header"
            android:textColor="@color/black"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/infoTextViewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerTextViewDetail"
            android:layout_alignStart="@id/headerTextViewDetail"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:text="text" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
